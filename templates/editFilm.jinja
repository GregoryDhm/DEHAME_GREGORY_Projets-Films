{% extends "./socle/base.jinja" %}
{% block titre %}Éditer le film{{ data[1] }}{% endblock titre %}
{% block head %}
    <link rel="stylesheet" href="/static/css/editFilm.css">
{% endblock head %}
{% block content %}
    <div class="film-details-container">
        <div class="film-image">
            <!--<img src="{{ affiche }}" alt="Affiche du film">-->
            <img src="{{ affiche }}" class="film-poster" alt="Affiche du film">
        </div>
        <div class="film-info">
            <form action="{{ url_for('films_app.editFilm', id=id) }}" method="POST">
                <h2 class="film-title"><input id="nomFilm" name="nomFilm" type="text" value="{{ data[0] }}"></h2>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea name="description" class="form-control" rows="4">{{ data[1] }}</textarea>
                </div>
                <div class="form-group">
                    <label for="year">Année de sortie</label>
                    <input type="number" name="annee" class="form-control" value="{{ data[2] }}">
                </div>
                <div class="form-group">
                    <label for="director">Réalisateur</label>
                    <input type="text" name="realisateur" class="form-control" value="{{ data[3] }}">
                </div>
                <div class="form-group actor-inputs">
                    <div class="actor-input">
                        <label for="acteur1">Acteur principal</label>
                        <input type="text" id="acteur1" name="acteur1" class="form-control" value="{{ data[4] }}">
                    </div>
                    <div class="actor-input">
                        <label for="acteur2">Acteur secondaire</label>
                        <input type="text" id="acteur2" name="acteur2" class="form-control" value="{{ data[5] }}">
                    </div>
                </div>
                <div class="button-container">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </form>
            <form action="{{ url_for('films_app.deleteFilm', id=id) }}" method="POST" class="inline button-container"></form>
                <button type="submit" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce film ?')" class="btn btn-danger">Supprimer</button>
            </form>
            </div>
        </div>
    </div>
{% endblock content %}
